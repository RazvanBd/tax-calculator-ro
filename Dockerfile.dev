version: '3.8'

# Development Dockerfile with hot-reload support
FROM node:20-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy dependencies
COPY package.json pnpm-lock.yaml ./
RUN pnpm install

# Copy all source files (will be hot-reloaded via volumes)
COPY . .

# Expose ports for frontend (Vite) and backend
EXPOSE 5173 3001

# Run development server
CMD ["pnpm", "dev"]
